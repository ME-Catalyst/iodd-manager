# IODD Manager Environment Configuration
# Copy this file to .env and update with your settings
# DO NOT commit .env to version control!

# ============================================================================
# Application Settings
# ============================================================================

# Environment: development, production, testing
ENVIRONMENT=development

# Application name
APP_NAME="IODD Manager"

# Application version
APP_VERSION=2.0.0

# Debug mode (true/false) - enables detailed error messages
DEBUG=true

# ============================================================================
# API Server Settings
# ============================================================================

# API server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# API reload on code changes (development only)
API_RELOAD=true

# API workers (production only, set to number of CPU cores)
API_WORKERS=1

# ============================================================================
# Frontend Settings
# ============================================================================

# Frontend server host
FRONTEND_HOST=0.0.0.0

# Frontend server port
FRONTEND_PORT=3000

# Auto-open browser on startup (true/false)
AUTO_OPEN_BROWSER=true

# ============================================================================
# Database Settings
# ============================================================================

# Database URL (SQLite)
# Format: sqlite:///path/to/database.db
# Use absolute path for production
IODD_DATABASE_URL=sqlite:///iodd_manager.db

# Database connection pool size (for future use with PostgreSQL/MySQL)
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# Run migrations on startup (true/false)
AUTO_MIGRATE=false

# ============================================================================
# Storage Settings
# ============================================================================

# Directory for storing IODD files
IODD_STORAGE_DIR=./iodd_storage

# Directory for generated adapters
GENERATED_OUTPUT_DIR=./generated

# Maximum file upload size in bytes (10MB default)
MAX_UPLOAD_SIZE=10485760

# ============================================================================
# Security Settings
# ============================================================================

# CORS allowed origins (comma-separated)
# Use * for all origins (development only)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# CORS allowed methods (comma-separated)
CORS_METHODS=GET,POST,DELETE,OPTIONS

# CORS allow credentials (true/false)
CORS_CREDENTIALS=true

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
# SECRET_KEY=your-secret-key-here

# JWT token expiration in minutes
# JWT_EXPIRATION=60

# Enable authentication (true/false)
# ENABLE_AUTH=false

# ============================================================================
# Logging Settings
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=text

# Log to file (true/false)
LOG_TO_FILE=false

# Log file path
LOG_FILE_PATH=./logs/iodd_manager.log

# Log rotation (when LOG_TO_FILE=true)
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# Adapter Generation Settings
# ============================================================================

# Default platform for adapter generation
DEFAULT_PLATFORM=node-red

# Template directory for generators
TEMPLATE_DIR=./templates

# ============================================================================
# External Services (Optional)
# ============================================================================

# Redis URL (for caching, optional)
# REDIS_URL=redis://localhost:6379/0

# Celery broker URL (for background tasks, optional)
# CELERY_BROKER_URL=redis://localhost:6379/1

# Sentry DSN (for error tracking, optional)
# SENTRY_DSN=https://example@sentry.io/123456

# ============================================================================
# Development Settings
# ============================================================================

# Enable API documentation (true/false)
# Disables /docs and /redoc endpoints when false
ENABLE_DOCS=true

# Enable detailed error responses (development only)
SHOW_ERROR_DETAILS=true

# Enable SQL query logging (development only)
LOG_SQL_QUERIES=false

# ============================================================================
# Performance Settings
# ============================================================================

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum concurrent connections
MAX_CONNECTIONS=100

# Enable response compression (true/false)
ENABLE_COMPRESSION=true

# ============================================================================
# Feature Flags
# ============================================================================

# Enable device simulation features (future)
# ENABLE_SIMULATION=false

# Enable analytics dashboard (future)
# ENABLE_ANALYTICS=true

# Enable export to external formats (future)
# ENABLE_EXPORT=false

# ============================================================================
# Testing Configuration
# ============================================================================

# Test database URL (used when running tests)
# TEST_DATABASE_URL=sqlite:///:memory:

# Skip slow tests (true/false)
# SKIP_SLOW_TESTS=false
