[MAIN]
# Python code to execute, usually for sys.path manipulation
init-hook='import sys; sys.path.append(".")'

# Files or directories to be skipped
ignore=CVS,.git,__pycache__,frontend,node_modules,build,dist

# Pickle collected data for later comparisons
persistent=yes

# Use multiple processes to speed up Pylint
jobs=0

# Allow loading of arbitrary C extensions
unsafe-load-any-extension=no

# Minimum supported python version
py-version=3.10

[MESSAGES CONTROL]
# Disable specific warnings/errors
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name (allow short variable names)
    R0903,  # too-few-public-methods (dataclasses often have few methods)
    R0913,  # too-many-arguments (common in constructors)
    W0212,  # protected-access (sometimes needed for testing)
    C0330,  # bad-continuation (handled by black)
    C0326,  # bad-whitespace (handled by black)
    fixme,  # Allow TODO comments
    duplicate-code,  # Can be overly sensitive

[REPORTS]
# Set the output format
output-format=text

# Activate the evaluation score
score=yes

[BASIC]
# Good variable names
good-names=i,j,k,ex,Run,_,id,db,fd,fp

# Regular expression for good names
variable-rgx=[a-z_][a-z0-9_]{0,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# Naming conventions
argument-naming-style=snake_case
attr-naming-style=snake_case
class-attribute-naming-style=any
class-const-naming-style=UPPER_CASE
class-naming-style=PascalCase
const-naming-style=UPPER_CASE
function-naming-style=snake_case
method-naming-style=snake_case
module-naming-style=snake_case
variable-naming-style=snake_case

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

# Maximum number of lines in a module
max-module-lines=1000

# String used for indentation
indent-string='    '

# Allow the body of an if to be on the same line if there is no else
single-line-if-stmt=no

[DESIGN]
# Maximum number of arguments for function / method
max-args=8

# Maximum number of attributes for a class
max-attributes=15

# Maximum number of boolean expressions in an if statement
max-bool-expr=5

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of parents for a class
max-parents=7

# Maximum number of public methods for a class
max-public-methods=25

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of statements in function / method body
max-statements=50

# Minimum number of public methods for a class
min-public-methods=1

[IMPORTS]
# Deprecated modules which should not be used
deprecated-modules=optparse,imp

# Create a graph of external dependencies
ext-import-graph=

# Create a graph of internal dependencies
int-import-graph=

[CLASSES]
# List of method names used to declare instance attributes
defining-attr-methods=__init__,__new__,setUp

# List of valid names for the first argument in a class method
valid-classmethod-first-arg=cls

# List of valid names for the first argument in a metaclass class method
valid-metaclass-classmethod-first-arg=mcs

[EXCEPTIONS]
# Exceptions that will emit a warning when caught
overgeneral-exceptions=BaseException,Exception
